        <mvc:interceptor>
            &lt;!&ndash;定义拦截的地址&ndash;&gt;
            <mvc:mapping path="/**"/>
            <bean class="com.dong.web.filter.LoginInterceptor" />
        </mvc:interceptor>
    </mvc:interceptors>-->
</beans>